<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize">

        <com.vpage.vpos.tools.PlayGifView
            android:id="@+id/viewGif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ProgressBar
            android:id="@+id/google_progress"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/contentLayout">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/noItemText"
                    android:text="Edit the fields you want to edit for ALL selected items"
                    android:textColor="@color/Black"
                    android:gravity="center|center_horizontal"
                    android:textSize="@dimen/common_textSize"
                    />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/itemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:inputType="text"
                        android:hint="Item Name"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/category"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:inputType="text"
                        android:drawableLeft="@drawable/tag"
                        android:drawablePadding="10dp"
                        android:hint="Category"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/spinnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="10dp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/common_textSize"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Supplier" />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_gray_corners">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/supplier_arrays"
                            android:prompt="@string/supplier_prompt"
                            android:id="@+id/spinnerSupplier"
                            android:gravity="center|center_vertical"
                            android:spinnerMode="dropdown" />

                    </RelativeLayout>

                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/costPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/dollar_symbol"
                        android:drawablePadding="10dp"
                        android:inputType="numberDecimal"
                        android:hint="Cost Price"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/retailPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:drawableLeft="@drawable/dollar_symbol"
                        android:drawablePadding="10dp"
                        android:inputType="numberDecimal"
                        android:hint="Retail Price"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/tax1Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/DarkGray">
                        <EditText
                            android:id="@+id/tax1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:inputType="text"
                            android:hint="Tax 1"
                            android:imeOptions="actionNext"
                            android:textColor="@color/Black"
                            android:gravity="left|center_vertical"
                            android:textSize="@dimen/common_textSize"
                            android:singleLine="true"
                            android:maxLines="1"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/DarkGray">
                        <EditText
                            android:id="@+id/tax1Percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:hint="Tax 1 Percent"
                            android:drawableRight="@drawable/percentage"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:textColor="@color/Black"
                            android:gravity="left|center_vertical"
                            android:textSize="@dimen/common_textSize"
                            android:singleLine="true"
                            android:maxLines="1"/>
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>
                <LinearLayout
                    android:id="@+id/tax2Layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/DarkGray">
                        <EditText
                            android:id="@+id/tax2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:inputType="text"
                            android:hint="Tax 2"
                            android:imeOptions="actionNext"
                            android:textColor="@color/Black"
                            android:gravity="left|center_vertical"
                            android:textSize="@dimen/common_textSize"
                            android:singleLine="true"
                            android:maxLines="1"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColorHint="@color/DarkGray">
                        <EditText
                            android:id="@+id/tax2Percent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:hint="Tax 2 Percent"
                            android:drawableRight="@drawable/percentage"
                            android:drawablePadding="10dp"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:textColor="@color/Black"
                            android:gravity="left|center_vertical"
                            android:textSize="@dimen/common_textSize"
                            android:singleLine="true"
                            android:maxLines="1"/>
                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">
                    <EditText
                        android:id="@+id/reorderLevel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:inputType="number"
                        android:hint="Reorder Level"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:singleLine="true"
                        android:maxLines="1"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/DarkGray"
                    android:layout_marginTop="10dp">

                    <com.vpage.vpos.tools.ActionEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:maxLines="10"
                        android:id="@+id/description"
                        android:isScrollContainer="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:gravity="left|center_vertical"
                        android:textSize="@dimen/common_textSize"
                        android:hint="Description"
                        android:inputType="textAutoCorrect|textCapSentences|textMultiLine" />
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="10dp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/common_textSize"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Allow Alt Description"  />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_gray_corners">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/allow_alt_arrays"
                            android:prompt="@string/allow_alt_prompt"
                            android:id="@+id/spinnerAllowAlt"
                            android:gravity="center|center_vertical"
                            android:spinnerMode="dropdown" />

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="10dp"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/common_textSize"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:text="Item has Serial Number"  />

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="@drawable/square_gray_corners">

                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:entries="@array/serial_no_arrays"
                            android:prompt="@string/allow_alt_prompt"
                            android:id="@+id/spinnerSerialNo"
                            android:gravity="center|center_vertical"
                            android:spinnerMode="dropdown" />

                    </RelativeLayout>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:id="@+id/textError"
                    android:textColor="@color/Red"
                    android:gravity="left|center_vertical"
                    android:textSize="@dimen/common_textSize"/>

                <info.hoang8f.widget.FButton
                    android:id="@+id/submitButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:padding="10dp"
                    android:gravity="center|center_horizontal"
                    android:layout_gravity="center_horizontal"
                    fbutton:buttonColor="@color/common_button_color"
                    fbutton:shadowColor="@color/LiteGray"
                    fbutton:shadowEnabled="true"
                    fbutton:shadowHeight="8dp"
                    android:text="Submit"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textColor="@color/button_text_color"
                    android:background="@android:color/transparent"
                    android:textSize="@dimen/common_textSize">
                </info.hoang8f.widget.FButton>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
