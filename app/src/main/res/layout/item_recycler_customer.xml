<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <com.vpage.vpos.CarouselView.MyLinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/viewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:background="@drawable/square_gray_corners">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/contentLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="10dp"
                android:id="@+id/IdText"
                android:text="ID:"
                android:textColor="@color/Black"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/common_textSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="10dp"
                android:id="@+id/firstText"
                android:text="FirstName:"
                android:textColor="@color/Black"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/common_textSize"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="10dp"
                android:id="@+id/lastText"
                android:text="LastName:"
                android:textColor="@color/Black"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/common_textSize"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="10dp"
                android:id="@+id/emailText"
                android:text="Email:"
                android:textColor="@color/Black"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/common_textSize"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:padding="10dp"
                android:id="@+id/phoneNumberText"
                android:text="PhoneNumber:"
                android:textColor="@color/Black"
                android:gravity="center|center_horizontal"
                android:textSize="@dimen/common_textSize"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/contentLayout"
            android:layout_toEndOf="@+id/contentLayout">
            <CheckBox
                android:id="@+id/itemCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/box"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"/>

<!--            <CheckBox
                android:id="@+id/itemCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true" />-->

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/editButton"
                android:gravity="center_vertical|center"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/itemCheckBox"
                android:src="@drawable/edit"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:id="@+id/smsButton"
                android:gravity="center_vertical|center"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/editButton"
                android:src="@drawable/mobile"
                android:background="@android:color/transparent" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:id="@+id/deleteButton"
                android:gravity="center_vertical|center"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/smsButton"
                android:src="@drawable/delete"
                android:background="@android:color/transparent" />

        </RelativeLayout>
        </RelativeLayout>
    </com.vpage.vpos.CarouselView.MyLinearLayout>



</LinearLayout>